<h1>Kompanijos redagavimas</h1>
<div class="pt-3"></div>
{{#if messages}}
  <div class="alert alert-{{status}}">{{messages}}</div>
{{/if}}
<form method="post" action="/edit-author/{{author.id}}">
  <div class="mb-3">
    <label for="name" class="form-label">aut pavadinimas</label>
    <input
      type="text"
      name="name"
      id="name"
      class="form-control"
      value="{{author.name}}"
    />
  </div>
  <div class="mb-3">
    <label for="surname" class="form-label">surname</label>
    <input
      type="text"
      name="surname"
      id="surname"
      class="form-control"
      value="{{author.surname}}"
    />
  </div>
  <button type="submit" class="btn btn-primary">Įrašyti</button>
</form>